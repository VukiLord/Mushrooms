        width: 300
    Label:
        text: 'What is your name?'
        font_size: 40
        color: 0.0, 0.0, 0.0, 1.0
        pos: 180, 450
            
    
    



    
        
        
            

        
            
            
            
         
        
            
        

    
        
        
         
